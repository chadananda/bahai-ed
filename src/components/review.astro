---
import { Picture } from "astro:assets";
import Box from "@components/ui/box.astro";
const { text, title, name, image } = Astro.props;
---

<Box
  class="w-[calc(100vw-5.75rem)] max-w-md flex flex-col justify-between snap-start snap-always shrink-0 first-of-type:scroll-m-10 scroll-m-5">
  <!-- <div class="absolute font-serif text-5xl left-2 top-8 text-slate-300 -z-10">
    â€œ
  </div> -->
  <blockquote class="text-lg md:text-xl [text-wrap:balance]">{text}</blockquote>
  <div class="flex items-center gap-3 mt-10">
    <div class="shrink-0">
      <Picture
        class="rounded-full w-12 h-12 object-cover bg-slate-100"
        formats={["webp", "jpg"]}
        src={image}
        alt={name}
        width="48"
        height="48"
        loading="lazy"
        widths={[48, 120, 188, 300, 372, 788, 1000, 1280]}
      />
    </div>
    <div>
      <h2 class="font-medium text-slate-800">{name}</h2>
      <p class="text-sm text-slate-600">{title}</p>
    </div>
  </div>
</Box>
